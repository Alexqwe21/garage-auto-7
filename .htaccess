RewriteEngine On
RewriteBase /

# ğŸš€ URLs amigÃ¡veis
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]

# ğŸš« Bloqueio de acesso direto a arquivos crÃ­ticos
<FilesMatch "(?i)(config\.php|\.env|composer\.json|composer\.lock|phpunit\.xml|readme\.md)">
    Order allow,deny
    Deny from all
</FilesMatch>

# ğŸš« Bloqueio de listagem de diretÃ³rios
Options -Indexes

# ğŸŒ Permitir sÃ³ Brasil
SetEnvIf GEOIP_COUNTRY_CODE BR AllowCountry
Order Deny,Allow
Deny from all
Allow from env=AllowCountry
